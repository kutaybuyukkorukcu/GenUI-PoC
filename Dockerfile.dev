# Development Dockerfile for Backend
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS development

# Set working directory
WORKDIR /src

# Copy csproj and restore dependencies (for better caching)
COPY ["FogData.csproj", "./"]
RUN dotnet restore "FogData.csproj"

# Copy everything else
COPY . .

# Expose port
EXPOSE 8080

# Default command (will be overridden in docker-compose.override.yml)
CMD ["dotnet", "run", "--urls", "http://+:8080"]
